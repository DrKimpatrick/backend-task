{
    "name": "backend-task",
    "version": "1.0.0",
    "description": "hackerbay backend task",
    "main": "server.ts",
    "scripts": {
        "test": "nyc mocha -r ts-node/register src/**/*.spec.ts",
        "dev": "nodemon --watch './src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' ./src/lib/server.ts",
        "build-ts": "tsc",
        "watch-node": "nodemon ./src/dist/server.js",
        "watch-ts": "tsc -w",
        "serve": "node ./src/dist/server.js",
        "lint": "node_modules/.bin/eslint --fix  src/lib/**/*.ts",
        "coverage": "npm run test &&  nyc report --reporter=text-lcov | coveralls"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DrKimpatrick/backend-task.git"
    },
    "keywords": [
        "node",
        "express",
        "mongodb",
        "docker",
        "tdd",
        "api",
        "json",
        "patching",
        "image",
        "thumbnail",
        "generation"
    ],
    "author": "dr.kimpatrick",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/DrKimpatrick/backend-task/issues"
    },
    "homepage": "https://github.com/DrKimpatrick/backend-task#readme",
    "dependencies": {
        "@hapi/joi": "^16.1.7",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "@types/hapi__joi": "^15.0.4",
        "@types/jsonwebtoken": "^8.3.4",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/mocha": "^5.2.7",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "babel-preset-env": "^1.7.0",
        "chai": "^4.2.0",
        "coveralls": "^3.0.6",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.2.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^3.0.8",
        "istanbul": "^0.4.5",
        "mocha": "^6.2.1",
        "nodemon": "^1.19.3",
        "nyc": "^14.1.1",
        "prettier": "^1.17.0",
        "source-map-support": "^0.5.13",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
